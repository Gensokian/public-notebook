"*":
  "atom-clock":
    dateFormat: "HH:mm - DD:MM:YYYY"
    locale: "de"
    showClockIcon: true
  "atom-material-ui":
    colors:
      abaseColor: "#00e1cc"
      accentColor: "#009486"
  "auto-update-plus":
    intervalMinutes: 15
    notificationStyle: "Info"
  autosave:
    enabled: true
  core:
    closeDeletedFileTabs: true
    closeEmptyWindows: false
    telemetryConsent: "no"
    themes: [
      "atom-material-ui"
      "one-dark-syntax"
    ]
    titleBar: "hidden"
    uriHandlerRegistration: "always"
  editor:
    scrollPastEnd: true
    tabLength: 4
  "file-icons":
    onChanges: true
  "markdown-preview-enhanced":
    enableHTML5Embed: true
    enableScriptExecution: true
    previewPanePosition: "down"
    previewTheme: "one-dark.css"
    singlePreview: false
  minimap:
    absoluteMode: true
    adjustMinimapWidthOnlyIfSmaller: false
    minimapScrollIndicator: true
    scrollAnimation: true
    smoothScrolling: true
  "minimap-autohider":
    TimeToHide: 7500
    TransitionDuration: 250
  "spell-check":
    locales: [
      "de-CH"
    ]
  "tree-view":
    squashDirectoryNames: true
  welcome:
    showOnStartup: false
